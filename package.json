{
  "name": "tweet-cation",
  "version": "1.0.0",
  "description": "Tweetcation",
  "author": "Matheus Palma",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "axios-endpoints": "^0.2.3",
    "dotenv": "^8.2.0",
    "restify": "^8.4.0",
    "restify-errors": "^8.0.1",
    "restify-plugins": "^1.6.0",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/async": "^3.0.3",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^6.1.3",
    "@types/node": "^12.12.15",
    "@types/restify": "^8.4.1",
    "@types/restify-plugins": "^1.5.12",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.6.0",
    "nodemon": "^1.19.4"
  }
}
